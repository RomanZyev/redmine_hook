<h2><%= l(:text_new) %></h2>
<%= error_messages_for @txt %>

<div class="box tabular">
	<%= labelled_form_for @txt, url: {action: "create"} do |f| %>
		 <%= render :partial => 'form', :locals => {:f => f} %>
		 <%= submit_tag l(:button_create), {:controller => 'text_hook', :action => 'create'} -%>
		 <%= link_to l(:button_cancel), {:controller => 'text_hook', :action => 'index'}%>
	<% end %>
</div>
